<form action=<%= initialize_game_path %> method="post">
  <div id="playersList" data-controller="players">
    <button type="button" data-action="click->players#addPlayer">Add Player</button>
    <div class="player">
      <input type="text" name="game[players][]" data-players-target="playerName" placeholder="Player Name">
      <button type="button" data-action="click->players#removePlayer">Remove Player</button>
    </div>
  </div>

  <button type="submit">Start game</button>
</form>

